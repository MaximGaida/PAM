<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDD835"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/text_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="100sp"
        android:autofillHints="@string/hint_user_field"
        android:backgroundTint="#100909"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="@string/hint_user_field"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textColorHint="#33691E" />

    <Button
        android:id="@+id/button_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_field"
        android:layout_marginHorizontal="130sp"
        android:layout_marginTop="125dp"
        android:backgroundTint="#039BE5"
        android:text="@string/main_btn"
        android:textColor="#212121"
        app:icon="?android:attr/actionModeWebSearchDrawable"
        app:iconTint="@color/white"
        app:strokeColor="#B36464" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_result"
        android:layout_marginTop="50sp"
        android:background="#FFFFFF"
        android:textAlignment="center"
        android:textSize="25sp" />

</RelativeLayout>